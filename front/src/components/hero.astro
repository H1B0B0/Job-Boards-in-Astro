---
import heroImage from "../assets/logo.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
import SearchBar from "./SearchBar.astro";
---
<header class="py-4 px-6">
  <div class="max-w-7xl mx-auto flex items-center justify-between">
    
    <SearchBar/>

  </div>
</header>

<main class="flex flex-col lg:flex-row justify-center items-center pt-16 pb-8 md:pt-12 md:pb-24">

    <script type="module" src="https://unpkg.com/@splinetool/viewer@0.9.485/build/spline-viewer.js"></script>
    <spline-viewer style="height: 600px;" class="lg:h-full" url="https://prod.spline.design/Wh7Vr0AGlAWB2Y1v/scene.splinecode"></spline-viewer>
  <div class="h-full" transition:animate="slide">
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      The best site for your job search
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Dive into a world of endless opportunities and discover the perfect career path with us - Your Ultimate Job Search Companion.
    </p>
  </div>
</main>




